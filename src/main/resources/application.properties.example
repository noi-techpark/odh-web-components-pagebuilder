# SYSTEM SETTINGS
server.port = 8080
server.servlet.session.persistent = false
server.servlet.compression.enabled = true
server.servlet.compression.mime-types = application/json,application/xml,text/html,text/xml,text/plain,application/javascript,text/css
spring.servlet.multipart.enabled = false
spring.jpa.hibernate.ddl-auto = validate
spring.jpa.properties.hibernate.default_schema = public
spring.jpa.properties.hibernate.enable_lazy_load_no_trans = true
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation = true
spring.flyway.baseline-on-migrate = true
spring.flyway.out-of-order = true
spring.flyway.schemas = public
spring.application.name = pagebuilder-test
spring.jmx.default-domain = pagebuilder-test
security.basic.enabled = false

# LOCAL SETTINGS
application.database.url = ${POSTGRES_URL}
application.database.username = ${POSTGRES_USERNAME}
application.database.password = ${POSTGRES_PASSWORD}
application.deployment.parallel = 1
application.aws.region = ${AWS_REGION}
application.aws.access-key = ${AWS_ACCESS_KEY}
application.aws.access-secret = ${AWS_SECRET_KEY}
application.users-file = ${USERS_FILE}
application.base-url = ${BASE_URL}
application.pages.domain-name = ${PAGES_DOMAIN_NAME}
application.pages.zone-name = ${PAGES_ZONE_NAME}
application.pages.allow-subdomains = ${PAGES_ALLOW_SUBDOMAINS}
